<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dilsennubin.shoppinglist.AddNewItem">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editProductNameInput"
        android:hint="@string/type_product_name"
        android:layout_marginTop="50dp"
        android:textSize="24sp"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:shadowColor="@color/accent_material_light"
        android:textColor="@color/accent_material_light"
        android:textColorHighlight="@color/accent_material_light"
        android:textIsSelectable="false"
        android:textColorLink="@color/accent_material_light"
        android:textColorHint="@color/abc_secondary_text_material_light"
        android:maxLines="3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editQuantityInput"
        android:text="1"
        android:textSize="19sp"
        android:textColor="@color/accent_material_light"
        android:textColorHighlight="@color/accent_material_light"
        android:textColorLink="@color/accent_material_light"
        android:maxLines="1"
        android:layout_above="@+id/EditProduct"
        android:layout_alignLeft="@+id/EditProduct"
        android:layout_alignStart="@+id/EditProduct" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/quantity"
        android:textSize="23sp"
        android:id="@+id/quantTextLabel"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/editProductNameInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Product"
        android:id="@+id/EditProduct"
        android:onClick="editProduct"
        android:layout_below="@+id/quantTextLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

</RelativeLayout>
